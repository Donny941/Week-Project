@model Polizia_Municipale.ViewModels.AnagraficaViewModel
@{
    ViewData["Title"] = "Nuova Anagrafica";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>Nuova Anagrafica</h2>
            </div>
            <div class="card-body">
                <form asp-action="CreaAnagrafica" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Inserisci il nome" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Cognome" class="form-label"></label>
                        <input asp-for="Cognome" class="form-control" placeholder="Inserisci il cognome" />
                        <span asp-validation-for="Cognome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CodiceFiscale" class="form-label"></label>
                        <input asp-for="CodiceFiscale" class="form-control" placeholder="Es: RSSMRA80A01H501Z" maxlength="16" />
                        <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Indirizzo" class="form-label"></label>
                        <input asp-for="Indirizzo" class="form-control" placeholder="Via, numero civico" />
                        <span asp-validation-for="Indirizzo" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group mb-3">
                                <label asp-for="Citta" class="form-label"></label>
                                <input asp-for="Citta" class="form-control" placeholder="Inserisci la città" />
                                <span asp-validation-for="Citta" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Cap" class="form-label"></label>
                                <input asp-for="Cap" class="form-control" placeholder="Es: 47521" maxlength="5" />
                                <span asp-validation-for="Cap" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Salva
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Annulla
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}