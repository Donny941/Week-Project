@model IEnumerable<Polizia_Municipale.ViewModels.AnagraficaViewModel>

@{
    ViewData["Title"] = "Anagrafica";
    var successMessage = TempData["SuccessMessage"];
}

<div class="container mt-4">

    <h2 class="mb-4">Registro Anagrafiche</h2>


    @if (successMessage is not null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Anagrafica" asp-action="Crea" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crea Nuova Anagrafica
        </a>
    </div>

   
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Cognome)</th>
                    <th>@Html.DisplayNameFor(model => model.CodiceFiscale)</th>
                    <th>@Html.DisplayNameFor(model => model.Indirizzo)</th>
                    <th>@Html.DisplayNameFor(model => model.Citta)</th>
                    <th>@Html.DisplayNameFor(model => model.Cap)</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
                            <td>@Html.DisplayFor(modelItem => item.CodiceFiscale)</td>
                            <td>@Html.DisplayFor(modelItem => item.Indirizzo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Citta)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cap)</td>
                            <td>
                               
                                <a asp-action="Modifica" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-pencil"></i> Modifica
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">Nessuna anagrafica trovata.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>