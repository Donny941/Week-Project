@model IEnumerable<Polizia_Municipale.ViewModels.AnagraficaViewModel>

@{
    ViewData["Title"] = "Anagrafica";
    var successMessage = TempData["SuccessMessage"];
}

<div class="container mt-4">

    <h2 class="mb-4">Registro Anagrafiche</h2>


    @if (successMessage is not null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Anagrafica" asp-action="Crea" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crea Nuova Anagrafica
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Cognome</th>
                    <th>Codice Fiscale</th>
                    <th>Indirizzo</th>
                    <th>Città</th>
                    <th>CAP</th>
                   
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Cognome</td>
                            <td>@item.CodiceFiscale</td>
                            <td>@item.Indirizzo</td>
                            <td>@item.Citta</td>
                            <td>@item.Cap</td>
                   
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            Nessuna anagrafica trovata.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>